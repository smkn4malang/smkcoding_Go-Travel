<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context=".TopUp_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/indo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PPN : Rp.5000"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#285296"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimal Top-Up Rp.25000"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#285296"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/pilih1"
        android:layout_marginTop="40dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#fff">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukkan Nominal"
                android:textColor="#000"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textColor="#285296"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/email"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5000"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#4682B4"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:textColorHint="#285296"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="110dp"
        android:text="TOP-UP"
        android:textColor="#4682B4"
        android:background="@drawable/border"/>

</LinearLayout>