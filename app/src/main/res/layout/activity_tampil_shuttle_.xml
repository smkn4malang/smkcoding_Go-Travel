<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    tools:context=".TampilShuttle_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/kota2" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/shuttle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:gravity="center"
            android:text="Shuttle"
            android:textColor="#000"
            android:textSize="20dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <android.support.v7.widget.CardView
            android:id="@+id/pilih1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="#fff">


            <LinearLayout
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jemput :"
                                android:layout_marginLeft="80dp"
                                android:textSize="20sp"
                                android:textColor="#000"/>
                            <TextView
                                android:id="@+id/jemput"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Denpasar"
                                android:layout_marginLeft="50dp"
                                android:textSize="20sp"
                                android:textColor="#000"/>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tujuan :"
                            android:layout_marginLeft="80dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tujuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Denpasar"
                            android:layout_marginLeft="60dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah :"
                            android:layout_marginLeft="80dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/jumlah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_marginLeft="90dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal :"
                            android:layout_marginLeft="80dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28-09-2001"
                            android:layout_marginLeft="50dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total :"
                            android:layout_marginLeft="80dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp.100000"
                            android:layout_marginLeft="82dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saldo Awal :"
                            android:textSize="20sp"
                            android:layout_marginLeft="80dp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/Saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 100000"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saldo Akhir :"
                            android:layout_marginLeft="80dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/SaldoAkhir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"
                            android:textColor="#000"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/hp" />
        <TextView
            android:id="@+id/pesan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4682B4"
            android:text="Hubungi Driver Melalui WA"
            android:textColor="#285296"
            android:onClick="pesan"
            android:textColorHint="#285296"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/logout2"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#4682B4"
        android:layout_gravity="center"
        android:background="@drawable/border"/>
</LinearLayout>

